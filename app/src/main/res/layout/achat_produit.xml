<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/idPimg"
            android:layout_width="400px"
            android:layout_height="match_parent"
            android:src="@drawable/panier"></ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idTextPrix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_default_prix"
                android:textSize="20dp"
                android:padding="5dp"
                android:layout_margin="5dp" />
            <TextView
                android:id="@+id/idTextDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_default_desc"
                android:textSize="20dp"
                android:padding="5dp"
                android:layout_margin="5dp"></TextView>

        <Button
            android:id="@+id/idBtnAjouterP"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_marginTop="12dp"
            android:text="ADD" />

        </LinearLayout>

    </LinearLayout>

</android.widget.RelativeLayout>