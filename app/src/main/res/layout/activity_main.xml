<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Le panier"
            android:textSize="80dp"
            android:textAlignment="center"
            android:textColor="@color/orang"
            android:paddingLeft="30dp"></TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/panier"
            android:paddingLeft="80dp"
            android:paddingTop="20dp"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="La saisie du code promotionnel ETE20 vous donne droit à 20$ de rabais sur votre première commande, complétée en ligne sur mt_distrib.ca. Un achat minimum de 120$ est requis sur la première commande,excluant la valeur du code promotionnel, les taxes et les frais de livraison. ."
            android:textSize="20dp"
            android:paddingTop="30dp"></TextView>


    </LinearLayout>



</android.widget.RelativeLayout>